{
  "name": "aws-res-api-sls",
  "version": "1.0.0",
  "description": "An aws serverless application for CRUD the employees of a company.",
  "scripts": {
    "serve": "serverless offline start",
    "install:db": "serverless dynamodb install",
    "migrate:db": "serverless dynamodb migrate",
    "deploy": "serverless deploy",
    "test": "jest --config jest.json",
    "test:cov": "jest --config jest.json --coverage",
    "lint": "eslint {src,test}/**/*.ts",
    "lint:fix": "eslint --fix {src,test}/**/*.ts"
  },
  "keywords": [
    "nodejs",
    "aws",
    "serverless",
    "sls",
    "backend",
    "typescript"
  ],
  "engines": {
    "node": ">=14"
  },
  "author": "Alef Berg da Silva",
  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.85",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "aws-sdk": "^2.1024.0",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "jest-sonar-reporter": "^2.0.0",
    "serverless-esbuild": "^1.21.1",
    "serverless-offline": "^8.2.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "joi": "^17.4.2",
    "serverless-dynamodb-local": "^0.2.40"
  },
  "jest-junit": {
    "outputDirectory": ".coverage"
  },
  "jestSonar": {
    "sonar56x": true
  }
}